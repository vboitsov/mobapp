<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="ua.org.rshu.fmi.mobapp.view.fragment.newscontent.NewsContentFragment">

    <RelativeLayout
        android:id="@+id/layout_content_icon"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/im_btn_arrow_back_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_arrow_back_black_24dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/layout_content_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_news_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp" />


            <TextView
                android:id="@+id/text_view_news_title"
                android:layout_below="@+id/image_view_news_pic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:text="sdfsdgsdgsdgsdfsdf"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_news_date"
                android:layout_below="@+id/text_view_news_title"
                android:layout_width="match_parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="sdfsdgsdgsdfsdfsdfsdfsdf"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_news_text"
                android:layout_below="@+id/text_view_news_date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="sdfsdfsdgsdgsdhbsjdhbjchdsbcjhsdbjchsbdjhcbsjdhbcjhsdbchjsbdjcbsdjcbsjhdbcjsdhbcjhsbd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
