<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="01.01.18"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_credit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="30dp"
                android:layout_toStartOf="@+id/tv_exam_date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:text="Monday"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/tv_exam_date" />

            <TextView
                android:id="@+id/tv_update_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_view_teacher_pic"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/tv_credit_name"
                android:textSize="13sp"
                android:textColor="#1565C0"
                android:text="Оновлено"/>

            <TextView
                android:id="@+id/tv_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_update_title"
                android:layout_below="@+id/tv_credit_name"
                android:textSize="13sp"
                android:text="update date"/>

            <LinearLayout
                android:id="@+id/linear_lesson_container"
                android:layout_below="@+id/tv_update_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>