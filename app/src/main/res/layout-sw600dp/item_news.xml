<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notes"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="8dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/image_view_news_pic"
                android:layout_width="match_parent"
                android:layout_height="300dp" />


            <TextView
                android:id="@+id/text_view_news_title"
                android:layout_below="@+id/image_view_news_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_news_date"
                android:layout_below="@+id/text_view_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_news_text"
                android:layout_below="@+id/text_view_news_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>